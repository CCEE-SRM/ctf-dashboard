// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id         String  @id @default(uuid())
  email      String  @unique
  name       String?
  profileUrl String?
  role       String  @default("USER")
  points     Int     @default(0)

  // Relation: User belongs to a Team
  teamId String?
  team   Team?   @relation("TeamMembers", fields: [teamId], references: [id])

  // Relation: User leads a Team
  ledTeam     Team?        @relation("TeamLeader")
  submissions Submission[]
}

model Team {
  id     String @id @default(uuid())
  name   String
  points Int    @default(0)

  // Relation: Team has multiple members
  members User[] @relation("TeamMembers")

  // Relation: Team has one leader
  leaderId    String       @unique
  leader      User         @relation("TeamLeader", fields: [leaderId], references: [id])
  submissions Submission[]
}

model Challenge {
  id          String   @id @default(uuid())
  title       String
  description String
  theme       String
  link        String?
  thumbnail   String? // URL to image
  flag        String // Secret flag
  points      Int
  createdAt   DateTime @default(now())

  submissions Submission[]
}

model Submission {
  id            String    @id @default(uuid())
  userId        String
  user          User      @relation(fields: [userId], references: [id])
  challengeId   String
  challenge     Challenge @relation(fields: [challengeId], references: [id])
  teamId        String?
  team          Team?     @relation(fields: [teamId], references: [id])
  submittedFlag String
  isCorrect     Boolean
  createdAt     DateTime  @default(now())

  @@unique([userId, challengeId]) // One submission record per challenge per user
}
