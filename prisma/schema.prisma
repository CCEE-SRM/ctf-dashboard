// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  ADMIN
}

model User {
  id         String  @id @default(uuid())
  email      String  @unique
  name       String?
  profileUrl String?
  role       Role    @default(USER)
  points     Int     @default(0)

  // Relation: User belongs to a Team
  teamId String?
  team   Team?   @relation("TeamMembers", fields: [teamId], references: [id])

  // Relation: User leads a Team
  ledTeam     Team?        @relation("TeamLeader")
  submissions Submission[]

  // Relation: User created Challenges
  createdChallenges Challenge[] @relation("CreatedChallenges")
}

model Team {
  id     String @id @default(uuid())
  name   String
  points Int    @default(0)

  // Relation: Team has multiple members
  members User[] @relation("TeamMembers")

  // Relation: Team has one leader
  leaderId    String       @unique
  leader      User         @relation("TeamLeader", fields: [leaderId], references: [id])
  submissions Submission[]
  leaderboard Leaderboard?
}

model Challenge {
  id            String   @id @default(uuid())
  title         String
  description   String
  theme         String
  link          String?
  thumbnail     String? // URL to image
  flag          String // Secret flag
  points        Int
  initialPoints Int      @default(0)
  visible       Boolean  @default(true)
  createdAt     DateTime @default(now())

  // Relation: Challenge created by User (Admin)
  authorId String?
  author   User?   @relation("CreatedChallenges", fields: [authorId], references: [id])

  submissions Submission[]
}

model Submission {
  id            String    @id @default(uuid())
  userId        String
  user          User      @relation(fields: [userId], references: [id])
  challengeId   String
  challenge     Challenge @relation(fields: [challengeId], references: [id])
  teamId        String?
  team          Team?     @relation(fields: [teamId], references: [id])
  submittedFlag String
  isCorrect     Boolean
  createdAt     DateTime  @default(now())

  // Unique hash to prevent duplicate submissions per team (or user if solo)
  submissionFingerprint String @unique
}

model Leaderboard {
  id            String   @id @default(uuid())
  teamId        String   @unique
  team          Team     @relation(fields: [teamId], references: [id])
  points        Int      @default(0)
  lastSolveAt   DateTime @default(now())
  memberDetails Json // Stores snapshot of members: [{ name, profileUrl, points, email }]
  updatedAt     DateTime @updatedAt
}
